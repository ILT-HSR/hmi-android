<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".ui.fragments.needparameters.ChooseCargoFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <ImageButton
        android:id="@+id/cargoButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:contentDescription="Choose Medkit Cargo"
        android:src="@drawable/medkit"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/itemCheckedView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="174dp"
        app:layout_constraintStart_toStartOf="@+id/cargoButton"
        app:layout_constraintTop_toTopOf="@+id/cargoButton" />

</android.support.constraint.ConstraintLayout>