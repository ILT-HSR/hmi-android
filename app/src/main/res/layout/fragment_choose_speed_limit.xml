<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".ui.mission.need.parameter.configurator.SpeedLimitConfigurator">

    <View
        android:id="@+id/speedLimitSelectionBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <View
        android:id="@+id/speedLimitSelectionView"
        android:layout_width="319dp"
        android:layout_height="220dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speedLimitTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/speedLimit_box_title"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/speedLimitSelectionView"
        app:layout_constraintStart_toStartOf="@+id/speedLimitSelectionView"
        app:layout_constraintTop_toTopOf="@+id/speedLimitSelectionView" />

    <TextView
        android:id="@+id/speedLimitValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/speedLimit_value_text"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/speedLimitSelectionView"
        app:layout_constraintEnd_toEndOf="@+id/speedLimitSelectionView"
        app:layout_constraintStart_toStartOf="@+id/speedLimitSelectionView"
        app:layout_constraintTop_toBottomOf="@+id/speedLimitTitleTextView" />

    <View
        android:id="@+id/speedLimit_value_underline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="5dp"
        android:background="#FEFD66"
        app:layout_constraintBottom_toBottomOf="@+id/speedLimitSelectionView"
        app:layout_constraintEnd_toEndOf="@+id/speedLimitTitleTextView"
        app:layout_constraintStart_toStartOf="@+id/speedLimitTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/speedLimitValueTextView" />

    <Button
        android:id="@+id/increaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/increase_button_text"
        app:layout_constraintBottom_toTopOf="@+id/speedLimit_value_underline"
        app:layout_constraintEnd_toEndOf="@+id/speedLimitSelectionView"
        app:layout_constraintStart_toEndOf="@+id/speedLimitTitleTextView"
        app:layout_constraintTop_toTopOf="@+id/speedLimitValueTextView" />

    <Button
        android:id="@+id/decreaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/decrease_button_text"
        app:layout_constraintBottom_toTopOf="@+id/speedLimit_value_underline"
        app:layout_constraintEnd_toStartOf="@+id/speedLimitTitleTextView"
        app:layout_constraintStart_toStartOf="@+id/speedLimitSelectionView"
        app:layout_constraintTop_toTopOf="@+id/speedLimitValueTextView" />

</android.support.constraint.ConstraintLayout>